<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div class="d-flex" data-controller="sortable">
  <ul data-sortable-target="goodList" class="bg-primary">
    <% @items["good"]&.each do |item| %>
      <li>
        <%= item.name %>
      </li>
    <% end %>
  </ul>

  <ul data-sortable-target="badList" class="bg-danger">
    <% @items["bad"]&.each do |item| %>
      <li>
        <%= item.name %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to "New item", new_item_path %>
